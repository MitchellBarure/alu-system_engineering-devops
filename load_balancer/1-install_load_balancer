#!/usr/bin/env bash
# Installs and configures HAProxy to load-balance traffic to web-01 and web-02

set -e
export DEBIAN_FRONTEND=noninteractive

WEB1_IP="54.211.70.81"
WEB2_IP="44.201.147.220"

apt-get update -y
apt-get install -y haproxy

# Ensure HAProxy starts on boot (older Ubuntu)
if [ -f /etc/default/haproxy ]; then
  sed -i 's/^\s*ENABLED=.*/ENABLED=1/' /etc/default/haproxy || true
fi

# Write a clean haproxy.cfg (HTTP mode, round-robin, health checks)
cat > /etc/haproxy/haproxy.cfg <<EOF
global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5s
    timeout client  50s
    timeout server  50s
    balance roundrobin

frontend http_front
    bind *:80
    default_backend web_back

backend web_back
    option httpchk GET /
    http-check expect status 200
    server web01 :80 check
    server web02 :80 check
