#!/usr/bin/env bash
# Installs and configures HAProxy to load-balance traffic to web-01 and web-02

set -e
export DEBIAN_FRONTEND=noninteractive

WEB1_IP="54.211.70.81"
WEB2_IP="44.201.147.220"

# Install HAProxy
apt-get update -y
apt-get install -y haproxy

# Ensure HAProxy starts on boot (older Ubuntu style)
if [ -f /etc/default/haproxy ]; then
  sed -i 's/^\s*ENABLED=.*/ENABLED=1/' /etc/default/haproxy || true
fi

# Write a clean haproxy.cfg (HTTP mode, round-robin)
cat > /etc/haproxy/haproxy.cfg <<EOCONF
global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    default_backend web_back

backend web_back
    balance roundrobin
    option httpchk GET /
    server web-01 ${WEB1_IP}:80 check
    server web-02 ${WEB2_IP}:80 check
EOCONF

# Restart HAProxy to apply the new configuration
service haproxy restart
